# Server binding
HOST=0.0.0.0
PORT=3000

# Request and CORS controls
REQUEST_BODY_LIMIT_BYTES=10485760
CORS_ORIGIN=http://127.0.0.1:8080,http://localhost:8080

# Auth for protected POST routes
REQUIRE_AUTH=true
API_TOKEN=change-me

# Postgres
DATABASE_URL=postgres://gameshelf:gameshelf@localhost:5432/gameshelf

# Cache and proxy limits
IMAGE_CACHE_DIR=./.data/images
IMAGE_CACHE_TTL_SECONDS=2592000
IMAGE_PROXY_TIMEOUT_MS=12000
IMAGE_PROXY_MAX_BYTES=8388608
CACHE_STATS_RATE_LIMIT_WINDOW_MS=60000
CACHE_STATS_MAX_REQUESTS_PER_WINDOW=60

# Upstream metadata providers (required)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
THEGAMESDB_API_KEY=

# Optional HLTB scraper integration
HLTB_SCRAPER_BASE_URL=http://127.0.0.1:8788
HLTB_SCRAPER_TOKEN=
HLTB_CACHE_ENABLE_STALE_WHILE_REVALIDATE=true
HLTB_CACHE_FRESH_TTL_SECONDS=604800
HLTB_CACHE_STALE_TTL_SECONDS=7776000

# Manuals
MANUALS_DIR=../nas-data/manuals
MANUALS_PUBLIC_BASE_URL=/manuals
