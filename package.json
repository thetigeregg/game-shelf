{
  "name": "game-shelf",
  "version": "0.1.5",
  "author": "TigerEgg",
  "homepage": "https://github.com/thetigeregg/game-shelf",
  "scripts": {
    "prestart": "node scripts/generate-runtime-config.mjs",
    "ng": "ng",
    "start": "ng serve --port 8100",
    "prebuild": "node scripts/generate-runtime-config.mjs",
    "dev:deps:up": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d postgres hltb-scraper",
    "dev:deps:restart": "docker compose -f docker-compose.yml -f docker-compose.dev.yml restart postgres hltb-scraper",
    "dev:deps:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml stop postgres hltb-scraper",
    "dev:manuals": "npx serve -l 8789 nas-data",
    "dev:host": "npm run dev:deps:up && npm --prefix server run dev",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run --coverage",
    "test:server": "npm --prefix server test",
    "test:worker": "npm --prefix worker test",
    "test:backend": "npm run test:server && npm run test:worker",
    "test:backend:coverage": "npm --prefix server run test:coverage && npm --prefix worker run test:coverage",
    "test:watch": "vitest",
    "test:ui:component": "vitest run --config vitest.ui.config.ts",
    "test:ui:e2e": "npx playwright test",
    "test:ui": "npm run test:ui:component && npm run test:ui:e2e",
    "test:ui:e2e:install": "npx playwright install --with-deps chromium",
    "lint": "npx eslint .",
    "prepare": "husky",
    "backup:restore:postgres": "./scripts/backup/restore-postgres.sh",
    "test:backup:ops": "./scripts/backup/test-backup-flow.sh"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.1.5",
    "@angular/cdk": "^21.1.5",
    "@angular/common": "^21.1.5",
    "@angular/compiler": "^21.1.5",
    "@angular/core": "^21.1.5",
    "@angular/forms": "^21.1.5",
    "@angular/platform-browser": "^21.1.5",
    "@angular/platform-browser-dynamic": "^21.1.5",
    "@angular/router": "^21.1.5",
    "@angular/service-worker": "^21.1.5",
    "@capacitor/core": "8.0.2",
    "@capacitor/haptics": "8.0.0",
    "@capacitor/keyboard": "8.0.0",
    "@capacitor/status-bar": "8.0.0",
    "@ionic/angular": "^8.7.17",
    "@playwright/test": "^1.58.2",
    "dexie": "^4.3.0",
    "fake-indexeddb": "^6.2.5",
    "ionicons": "^8.0.13",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^21.2.0",
    "@angular-eslint/eslint-plugin": "^21.2.0",
    "@angular-eslint/eslint-plugin-template": "^21.2.0",
    "@angular-eslint/schematics": "^21.2.0",
    "@angular-eslint/template-parser": "^21.2.0",
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.5",
    "@angular/language-service": "^21.1.5",
    "@capacitor/cli": "8.0.2",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@ionic/angular-toolkit": "^12.3.0",
    "@types/node": "^22.19.10",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.6.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  },
  "description": "A game library tracker with metadata enrichment, manual lookup, and import workflows.",
  "lint-staged": {
    "*.{ts,js,mjs,cjs}": "npx eslint --fix",
    "*.{ts,html,scss,json,js,mjs,cjs}": "prettier --write"
  }
}
