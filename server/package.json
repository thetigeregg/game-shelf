{
  "name": "game-shelf-server",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node --enable-source-maps --import tsx src/index.ts",
    "test": "node --test --import tsx src/**/*.test.ts",
    "test:coverage": "node --test --experimental-test-coverage --test-coverage-lines=80 --test-coverage-functions=80 --test-coverage-branches=80 --test-coverage-include='src/**/*.ts' --test-coverage-exclude='src/**/*.test.ts' --import tsx src/**/*.test.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/middie": "^9.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "dotenv": "^17.3.1",
    "express-rate-limit": "^8.2.1",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.1.0",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.0",
    "@types/pg": "^8.15.5",
    "typescript": "^5.9.2"
  }
}
