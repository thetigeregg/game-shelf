{
  "name": "game-shelf",
  "version": "0.1.41",
  "author": "TigerEgg",
  "homepage": "https://github.com/thetigeregg/game-shelf",
  "scripts": {
    "prestart": "node scripts/generate-runtime-config.mjs",
    "ng": "ng",
    "start": "ng serve --port 8100 --proxy-config proxy.conf.json",
    "prebuild": "node scripts/generate-runtime-config.mjs",
    "dev:stack:up": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build postgres hltb-scraper metacritic-scraper api edge",
    "dev:stack:restart": "docker compose -f docker-compose.yml -f docker-compose.dev.yml restart edge api hltb-scraper metacritic-scraper postgres",
    "dev:stack:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "dev:backend:logs": "docker compose -f docker-compose.yml -f docker-compose.dev.yml logs -f edge api postgres hltb-scraper metacritic-scraper",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run --coverage",
    "test:server": "npm --prefix server test",
    "test:worker": "npm --prefix worker test",
    "test:backend": "npm run test:server && npm run test:worker",
    "test:backend:coverage": "npm --prefix server run test:coverage && npm --prefix worker run test:coverage",
    "test:watch": "vitest",
    "test:ui:component": "vitest run --config vitest.ui.config.ts",
    "test:ui:e2e": "npx playwright test",
    "test:ui": "npm run test:ui:component && npm run test:ui:e2e",
    "test:ui:e2e:install": "npx playwright install --with-deps chromium",
    "lint": "npx eslint .",
    "prepare": "husky",
    "i:all": "npm i && npm --prefix server i && npm --prefix worker i && npm --prefix hltb-scraper i && npm --prefix metacritic-scraper i",
    "ci:all": "npm ci && npm --prefix server ci && npm --prefix worker ci && npm --prefix hltb-scraper ci && npm --prefix metacritic-scraper ci",
    "audit:all": "npm audit && npm --prefix server audit && npm --prefix worker audit && npm --prefix hltb-scraper audit && npm --prefix metacritic-scraper audit",
    "backup:restore:postgres": "./scripts/backup/restore-postgres.sh",
    "test:backup:ops": "./scripts/backup/test-backup-flow.sh"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.2.0",
    "@angular/cdk": "^21.2.0",
    "@angular/common": "^21.2.0",
    "@angular/compiler": "^21.2.0",
    "@angular/core": "^21.2.0",
    "@angular/forms": "^21.2.0",
    "@angular/platform-browser": "^21.2.0",
    "@angular/platform-browser-dynamic": "^21.2.0",
    "@angular/router": "^21.2.0",
    "@angular/service-worker": "^21.2.0",
    "@capacitor/core": "8.1.0",
    "@capacitor/haptics": "8.0.1",
    "@capacitor/keyboard": "8.0.1",
    "@capacitor/status-bar": "8.0.1",
    "@ionic/angular": "^8.7.18",
    "@playwright/test": "^1.58.2",
    "@tiptap/core": "^3.20.0",
    "@tiptap/extension-details": "^3.20.0",
    "@tiptap/extension-list": "^3.20.0",
    "@tiptap/extension-underline": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "dexie": "^4.3.0",
    "dompurify": "^3.3.1",
    "fake-indexeddb": "^6.2.5",
    "ionicons": "^8.0.13",
    "ngx-tiptap": "^14.0.1",
    "remixicon": "^4.9.1",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.16.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^21.2.0",
    "@angular-eslint/eslint-plugin": "^21.2.0",
    "@angular-eslint/eslint-plugin-template": "^21.2.0",
    "@angular-eslint/schematics": "^21.2.0",
    "@angular-eslint/template-parser": "^21.2.0",
    "@angular/build": "^21.2.0",
    "@angular/cli": "^21.2.0",
    "@angular/compiler-cli": "^21.2.0",
    "@angular/language-service": "^21.2.0",
    "@capacitor/cli": "8.1.0",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/eslintrc": "^3.3.4",
    "@eslint/js": "^9.39.3",
    "@ionic/angular-toolkit": "^12.3.0",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^22.19.13",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.3",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsdoc": "^62.7.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-unused-imports": "^4.4.1",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "description": "A game library tracker with metadata enrichment, manual lookup, and import workflows.",
  "lint-staged": {
    "*.{ts,js,mjs,cjs}": "npx eslint --fix",
    "*.{ts,html,scss,json,js,mjs,cjs}": "prettier --write"
  }
}
